<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="jsonform.add_schema_extension" class="EffianaJsonForm\Form\Extension\AddJsonFormExtension" public="true">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\FormType" />
        </service>

        <!-- Normalizes FormInterface when using the symfony serializer -->
        <service id="jsonform.serializer.form_error_normalizer" class="EffianaJsonForm\Serializer\Normalizer\FormErrorNormalizer">
            <argument type="service" id="translator" />
            <tag name="serializer.normalizer" priority="-10" />
        </service>

        <service id="jsonform.serializer.initial_values_normalizer" class="EffianaJsonForm\Serializer\Normalizer\InitialValuesNormalizer">
            <tag name="serializer.normalizer" priority="-10" />
        </service>

        <service id="jsonform.resolver" class="EffianaJsonForm\Resolver" public="true"/>

        <service id="EffianaJsonForm\JsonForm" class="EffianaJsonForm\JsonForm">
            <argument type="service" id="jsonform.resolver" />
        </service>
        <service id="jsonform" alias="EffianaJsonForm\JsonForm" public="true"/>

        <service id="jsonform.guesser.validator" class="EffianaJsonForm\Guesser\ValidatorGuesser" public="true">
            <argument type="service" id="validator.mapping.class_metadata_factory" />
        </service>
    </services>

</container>
